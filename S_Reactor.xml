<?xml version="1.0"?>
<!-- S_Reactor.xml -->
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>Message</name>
            <dataType>string</dataType>
            <defaultValue></defaultValue>
            <shortCode>message</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>NumChildren</name>
            <dataType>ui4</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>children</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>NumRunning</name>
            <dataType>ui4</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>running</shortCode>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>HouseMode</name>
            <dataType>ui4</dataType>
            <defaultValue>1</defaultValue>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>SystemPowerSource</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>SystemBatteryLevel</name>
            <dataType>ui4</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>misc_arg</name>
            <dataType>ui4</dataType>
        </stateVariable>
    </serviceStateTable>
    <actionList>
        <action>
            <name>AddSensor</name>
            <argumentList>
            </argumentList>
        </action>
        <action>
          <name>RunScene</name>
          <argumentList>
            <argument>
              <name>SceneNum</name>
              <direction>in</direction>
              <relatedStateVariable>misc_arg</relatedStateVariable>
            </argument>
          </argumentList>
        </action>
        <action>
          <name>StopScene</name>
          <argumentList>
            <argument>
              <name>SceneNum</name>
              <direction>in</direction>
              <relatedStateVariable>misc_arg</relatedStateVariable>
            </argument>
          </argumentList>
        </action>
        <action>
            <name>MasterClear</name>
            <argumentList>
            </argumentList>
        </action>
        <action>
            <name>GetPluginVersion</name>
            <argumentList>
                <argument>
                    <name>ResultVersion</name>
                    <direction>out</direction>
                    <relatedStateVariable>TempStorage</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetDebug</name>
            <argumentList>
                <argument>
                    <name>debug</name>
                    <direction>in</direction>
                </argument>
            </argumentList>
        </action>
    </actionList>
</scpd>