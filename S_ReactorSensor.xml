<?xml version="1.0"?>
<!-- S_ReactorSensor.xml -->
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>Enabled</name>
            <dataType>boolean</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>enabled</shortCode>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>Message</name>
            <dataType>string</dataType>
            <defaultValue></defaultValue>
            <shortCode>message</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>Invert</name>
            <dataType>boolean</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>invert</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>Retrigger</name>
            <dataType>boolean</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>retrig</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>Runtime</name>
            <dataType>ui4</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>runtime</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>TripCount</name>
            <dataType>ui4</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>tripcount</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>RuntimeSince</name>
            <dataType>ui4</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>since</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>misc_arg</name>
            <dataType>ui4</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>str_arg</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>bool_arg</name>
            <dataType>boolean</dataType>
        </stateVariable>
    </serviceStateTable>
    <actionList>
        <action>
            <name>SetVariable</name>
            <argumentList>
                <argument>
                    <name>VariableName</name>
                    <direction>in</direction>
                    <relatedStateVariable>str_arg</relatedStateVariable>
                </argument>
                <argument>
                    <name>NewValue</name>
                    <direction>in</direction>
                    <relatedStateVariable>str_arg</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetEnabled</name>
            <argumentList>
                <argument>
                    <name>newEnabledValue</name>
                    <direction>in</direction>
                    <relatedStateVariable>Enabled</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetGroupEnabled</name>
            <argumentList>
                <argument>
                    <name>GroupId</name>
                    <relatedStateVariable>str_arg</relatedStateVariable>
                </argument>
                <argument>
                    <name>newEnabledValue</name>
                    <relatedStateVariable>bool_arg</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>Reset</name>
            <argumentList>
            </argumentList>
        </action>
        <action>
            <name>Trip</name>
            <argumentList>
            </argumentList>
        </action>
        <action>
            <name>Restart</name>
            <argumentList>
            </argumentList>
        </action>
        <action>
            <name>ResetRuntime</name>
            <argumentList>
            </argumentList>
        </action>
        <action>
          <name>RunScene</name>
          <argumentList>
            <argument>
              <name>SceneNum</name>
              <direction>in</direction>
              <relatedStateVariable>misc_arg</relatedStateVariable>
            </argument>
          </argumentList>
        </action>
        <action>
          <name>StopScene</name>
          <argumentList>
            <argument>
              <name>SceneNum</name>
              <direction>in</direction>
              <relatedStateVariable>misc_arg</relatedStateVariable>
            </argument>
          </argumentList>
        </action>
    </actionList>
</scpd>